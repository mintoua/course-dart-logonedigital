void main() {
  // Liste des plats avec leurs prix (constantes pour une meilleure lisibilité)
  const Map<String, double> menu = {
    'Pizza': 12.99,
    'Burger': 9.99,
    'Salade': 7.99,
    'Boisson': 2.50,
  };

  double total = 0;
  String choix;

  do {
    // Affichage du menu
    print('Menu :');
    menu.forEach((plat, prix) => print('$plat - $prix €'));

    // Demande du choix à l'utilisateur
    stdout.write('Choisissez un plat (ou "fin" pour terminer) : ');
    choix = stdin.readLineSync()!.toLowerCase();

    if (menu.containsKey(choix)) {
      total += menu[choix]!;
      print('Ajouté à votre commande : $choix');
    } else if (choix == 'fin') {
      print('Votre commande est terminée.');
    } else {
      print('Plat non trouvé.');
    }
  } while (choix != 'fin');

  // Affichage du récapitulatif
  print('Récapitulatif de votre commande :');
  print('Total : $total €');
}